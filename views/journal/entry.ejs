<script async type="module" src="/js/entry-helper.js"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= GOOGLE_API_KEY %>&libraries=places&callback=initMap"></script>
  <aside id="metadata">
    <article class="metadata-entry" id="fieldset-date_time">
      <header>
        <h3 aria-label="Date and Time">🗓</h3>
        <h4 class="inactive-text" id="heading-date_time-h4" >Date and Time…</h4>
        <section class="button-list form-layout-row">
          <button class="hidden button-round button-circle-small button-clear" type="button" id="button-date_time-now" aria-label="Set to current date and time">?</button>
          <button class="button-round button-circle-small button-clear" type="button" id="button-date_time-edit" aria-label="Edit Date and Time">E</button>
        </section>
      </header>
      <fieldset class="form-layout-column" form="form-journal_entry">
        <div class="form-group">
          <label for="input-date_time-year">Date</label>
          <input form="form-journal_entry" type="date" id="input-date_time-year" name="date_time" />
        </div>
        <div class="form-group">
          <label for="input-date_time-time">Time</label>
          <input form="form-journal_entry" type="time" id="input-date_time-ampm" name="date_time" />
        </div>
      </fieldset>
    </article>
    <article class="metadata-entry" id="fieldset-location">
      <header>
        <h3 aria-label="Location">📍</h3>
        <h4 class="inactive-text" id="heading-location-h4" >Add a Location…</h4>
        <section class="button-list form-layout-row">
          <button class="hidden button-round button-circle-small button-clear" type="button" id="button-location-remove" aria-label="Remove Location">X</button>
          <button class="button-round button-circle-small button-clear" type="button" id="button-location-edit" aria-label="Edit Location">E</button>
        </section>
      </header>
      <fieldset class="form-layout-column" form="form-journal_entry">
        <div class="form-group">
          <label for="input-location-search">Search</label>
          <input form="form-journal_entry" aria-role="searchbox"  aria-controls="test" aria-autocomplete="list" type="text" id="input-location-search" name="location-search" />
        </div>
        <input form="form-journal_entry" type="hidden" id="hidden-location-place_id" name="location_place_id" />
        <input form="form-journal_entry" type="hidden" id="hidden-location-name" name="location_name" />
        <input form="form-journal_entry" type="hidden" id="hidden-location-longitude" name="location_longitude" />
        <input form="form-journal_entry" type="hidden" id="hidden-location-latitude" name="location_latitude" />
      </fieldset>
    </article>
    <article class="metadata-entry" id="fieldset-weather">
      <header>
        <h3 aria-label="Weather">🌤</h3>
        <h4 id="heading-weather-h4" >Current Weather</h4>
        <section class="button-list form-layout-row">
          <button class="hidden button-round button-circle-small button-clear" type="button" aria-label="Remove Weather" id="button-weather-remove">X</button>
          <button class="hidden button-round button-circle-small button-clear" type="button" aria-label="Add Weather" id="button-weather-add">A</button>
        </section>
      </header>
      <fieldset>
        <input form="form-journal_entry" type="hidden" id="hidden-weather-icon" name="weather_icon" />
        <input form="form-journal_entry" type="hidden" id="hidden-weather-temp_f" name="weather_temp_f" />
        <input form="form-journal_entry" type="hidden" id="hidden-weather-condition" name="weather_condition" />
      </fieldset>
    </article>
  </aside>
  <main>
    <div class="image-placeholder"></div>
    <form class="form-layout-column" id="form-journal_entry" action="/journal-entry/new" method="POST">
      <div class="form-group">
        <label for="input-title">Title</label>
        <input type="text" id="input-title" name="title" />
      </div>
      <div class="form-group">
        <label for="input-body">Body</label>
        <textarea rows="15" id="input-body" name="body"></textarea>
      </div>
      <button type="submit">Save Entry</button>
    </form>
  </main>