<script async type="module" src="/js/entry-helper.js" defer></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= GOOGLE_API_KEY %>&libraries=places&callback=initMap"></script>
<main>
  <aside>
    <article class="entry-meta" id="location">
      <header>
        <h3 aria-label="Location">📍</h3>
        <h4 id="h4-location-name" class="inactive-text">Add a Location…</h4>
        <section class="meta-button-list form-layout-row">
          <button class="hidden button-round button-circle-small button-clear" type="button" id="button-remove-location" aria-label="Remove Location">X</button>
          <button class="button-round button-circle-small button-clear" type="button" id="button-edit-location" aria-label="Edit Location">E</button>
        </section>
      </header>
      <fieldset class="form-layout-column" form="form-journal-entry">
        <div class="form-group"">
          <label for="input-location-search">Search</label>
          <input form="form-journal-entry" aria-role="searchbox"  aria-controls="test" aria-autocomplete="list" type="text" id="input-location-search" name="location-search" />
        </div>
        <input form="form-journal-entry" type="hidden" id="input-location-place-id" name="location_place_id" />
        <input form="form-journal-entry" type="hidden" id="input-location-name" name="location_name" />
        <input form="form-journal-entry" type="hidden" id="input-location-longitude" name="location_longitude" />
        <input form="form-journal-entry" type="hidden" id="input-location-latitude" name="location_latitude" />
      </fieldset>
    </article>
    <article class="entry-meta" id="fieldset-weather">
      <header>
      <h3 aria-label="Weather">🌤</h3>
      <h4 id="h4-weather-name">Current Weather</h4>
      <section class="meta-button-list form-layout-row">
        <button class="hidden button-round button-circle-small button-clear" type="button" aria-label="Remove Weather" id="button-remove-weather">X</button>
        <button class="hidden button-round button-circle-small button-clear" type="button" aria-label="Add Weather" id="button-add-weather">A</button>
      </section>
      </header>
      <fieldset>
        <input form="form-journal-entry" type="hidden" id="input-weather-icon" name="weather_icon" />
        <input form="form-journal-entry" type="hidden" id="input-weather-temp-f" name="weather_temp_f" />
        <input form="form-journal-entry" type="hidden" id="input-weather-condition" name="weather_condition" />
      </fieldset>
    </article>
  </aside>
    <form class="form-layout-column" id="form-journal-entry" action="/journal-entry/new" method="POST">
      <div class="form-group">
        <label for="input-title">Title</label>
        <input type="text" id="input-title" name="title" />
      </div>
      <div class="form-group">
        <label for="input-body">Body</label>
        <input type="text" id="input-body" name="body" />
      </div>
      <button type="submit">Save Entry</button>
    </form>
</main>