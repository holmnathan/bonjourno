<script src="/js/alert.js" defer></script>
<% if (alerts.error) { %>
  <% alerts.error.forEach(msg => { %>
    <div class="modal alert alert-error hidden-alert">
      <section>
        <header>
          <h1>⚠</h1>
        </header>
        <main>
          <%- msg %>
        </main>
      </section>
      <footer>
        <button class="button-close">Close</button>
      </footer>
    </div>
  <% }); %>
<% } %>
<% if (alerts.success) { %>
  <% alerts.success.forEach(msg => { %>
    <div class="modal alert alert-success hidden-alert">
      <section>
        <header>
          <h1>⚠</h1>
        </header>
        <main>
          <%- msg %>
        </main>
      </section>
      <footer>
        <button class="button-close">Close</button>
      </footer>
    </div>
  <% }); %>
<% } %>