<%# A list of filters / sorting options %>

<form action="/<%= user.username %>" method="GET">
  <nav class="nav-entry-sort">
    <ul class="form-layout-row">
      <li>
        <input id="radio-sort-date-ascending" value="asc" type="radio" name="date_sort">
        <label for="radio-sort-date-ascending">Newest First</label>
      </li>
      <li>
        <input id="radio-sort-date-descending" value="desc" type="radio" name="date_sort" />
        <label for="radio-sort-date-descending">Oldest First</label>
      </li>
    </ul>
    <button type="submit">Sort</button>
  </nav>
</form>